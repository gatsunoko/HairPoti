<% if user_signed_in? %>
  <div class="like text-center" id="like_area<%= picture.id.to_s %>">
    <% if picture.like_user(current_user.id) %>
      <%= link_to likes_like_path(id: picture.id), remote: true do %>
        <div class="heart"></div>
      <% end -%>
      <span id="like_users_display<%= picture.id %>">
        <% if picture.likes.count > 0 %>
          <%= link_to likes_persons_path(id: picture.id), remote: true do %>
            <p class="likes_count">いいね<%= picture.likes.count %>件</p>
          <% end -%>
        <% end -%>
      </span>
    <% else %>
      <%= link_to likes_like_path(id: picture.id), remote: true do %>
        <div class="heart_empty"></div>
      <% end -%>
      <span id="like_users_display<%= picture.id %>">
        <% if picture.likes.count > 0 %>
          <%= link_to likes_persons_path(id: picture.id), remote: true do %>
            <p class="likes_count">いいね<%= picture.likes.count %>件</p>
          <% end -%>
        <% end -%>
      </span>
    <% end -%>
  </div>
<% else %>
  <div class="like text-center" id="like_area<%= picture.id.to_s %>">
    <div class="heart_empty"></div>
      <span id="like_users_display<%= picture.id %>">
        <% if picture.likes.count > 0 %>
          <%= link_to likes_persons_path(id: picture.id), remote: true do %>
            <p class="likes_count">いいね<%= picture.likes.count %>件</p>
          <% end -%>
        <% end -%>
      </span> 
  </div>
<% end %>