<p id="notice"><%= notice %></p>

<h1>Pictures</h1>
<%= link_to 'URL登録', new_picture_path %><br>
<%= link_to '一括登録', bulk_new_pictures_path %><br>
<table>
  <thead>
    <tr>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= link_to(image_tag(picture.url + 'media/?size=t'), picture) %></td>
        <td>投稿者: <%= picture.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

