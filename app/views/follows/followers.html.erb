<div class="followers_area">
  <% @followers.each do |follower| %>
    <div class="follower_area">
      <%= link_to user_path(follower.user.id) do %>
        <div class="picture_area">
          <%= image_tag(user_image_display(path: follower.user.picture, size: "m", dir: 'PROFILE_PICTURE_DIR')) %>
        </div>
        <div class="text_area">
          <p class="name">名前:<%= follower.user.name %></p>
        </div>
      <% end -%>
    </div>
  <% end -%>
</div>