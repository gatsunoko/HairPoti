<!DOCTYPE html>
<html>
  <head>
    <title>HairPoti</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="haeder">
      <div class="container px-0 text-center">
        <nav id="navbar" class="navbar navbar-expand navbar-light py-0 px-0">
          <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div id="menu" class="collapse navbar-collapse">
            <ul class="navbar-nav row col-12 px-0">
              <li class="navbar-item col text-center px-0">
                <%= link_to image_tag('home.png'), root_path, class: 'navbar-brand' %>
              </li>
              <%= render 'pictures/search' %>
              <% if user_signed_in? %>
                <%#= link_to 'プロフィール変更', edit_user_registration_path %>
                <% if current_user.admin %>
                  <div class="col text-center px-0">
                    <li class="navbar-item text-center px-0">
                      <%= link_to '管理者ページ', admin_administrator_index_path %>                    
                    </li>
                  </div>
                <% end -%>
                <% if current_user.stylist? || current_user.admin? %>
                  <div class="col text-center px-0">
                    <li class="navbar-item text-center px-0 py-2">
                      <%= link_to image_tag('post.png'), new_picture_path %>
                    </li>
                  </div>
                <% end -%>
                  <div class="col text-center px-0">
                    <li class="navbar-item text-center px-0 py-2"><%= link_to image_tag('heart_empty.png'), likes_likes_path %></li>
                  </div>
                <% if current_user.stylist? %>
                  <div class="col text-center px-0">
                    <li class="navbar-item text-center px-0 py-2"><%= link_to image_tag('mypage.png'), stylist_path(current_user.id) %></li>
                  </div>
                <% else %>
                  <div class="col text-center px-0">
                    <li class="navbar-item text-center px-0 py-2"><%= link_to image_tag('mypage.png'), edit_user_registration_path %></li>
                  </div>
                  <%#= link_to 'ユーザーエディット', edit_user_registration_path %>
                <% end -%>
                <%#= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
              <% else %>
                <div class="col text-center px-0">
                  <li class="navbar-item text-center px-0 py-2"><%= link_to 'ユーザー登録', new_user_registration_path %></li>
                </div>
                <div class="col text-center px-0">
                  <li class="navbar-item text-center px-0 py-2"><%= link_to 'ログイン', new_user_session_path %></li>
                </div>
              <% end %>
              <style>
                .navbar-item a {
                  max-width: 100%;
                  margin: 0;
                }
              </style>
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <div id="contants" class="contants">
      <div class="container px-0 py-0">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
