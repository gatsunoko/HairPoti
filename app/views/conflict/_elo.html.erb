<div class="card1_area">
  <%= link_to(image_tag(@picture1.url + 'media/?size=l', class: 'card1', onError: "img_blank(#{@picture1.id})"),
        conflict_elo_path(win: @picture1.id, lose: @picture2.id, next1: @next1.id, next2: @next2.id, area: @area, length: @length, count: @count), remote: true) %>
</div>
<div class="card2_area">
  <%= link_to(image_tag(@picture2.url + 'media/?size=l', class: 'card2', onError: "img_blank(#{@picture2.id})"),
        conflict_elo_path(win: @picture2.id, lose: @picture1.id, next1: @next1.id, next2: @next2.id, area: @area, length: @length, count: @count), remote: true) %>
</div>

<div class="next_picture">
  <p><%= 10 - @count %></p>
  <%= image_tag(@next1.url + 'media/?size=l', class: 'next_picture1', onError: "img_blank(#{@next1.id})") %>
  <%= image_tag(@next2.url + 'media/?size=l', class: 'next_picture2', onError: "img_blank(#{@next2.id})") %>
</div>