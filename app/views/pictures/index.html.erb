<p id="notice"><%= notice %></p>

<h1>Pictures</h1>
<%= link_to 'URL登録', new_picture_path %>
<%= link_to '一括登録', bulk_new_pictures_path %>
<table>
  <thead>
    <tr>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<div class="feed_page">
  <div class="feed_title"><%= page_entries_info @pictures %></div>
  <div class="feed">
    <%= paginate @pictures %>
  </div>
</div>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag(picture.picture_url) %></td>
        <td><%= picture.rating %></td>
        <td><%= link_to 'Show', picture %></td>
        <% if current_user.admin %>
          <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
          <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="feed_page">
  <div class="feed_title"><%= page_entries_info @pictures %></div>
  <div class="feed">
    <%= paginate @pictures %>
  </div>
</div>

