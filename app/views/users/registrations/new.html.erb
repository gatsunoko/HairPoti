<h2>ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group col-sm-8 col-md-6">
    <h4>ユーザータイプ</h4>
    <div class="custom-control custom-radio">
      <%= f.radio_button :role, :user, id: :genre1, class: 'custom-control-input', checked: true %>
      <label for="genre1" class="custom-control-label">お客さん</label>
    </div>
    <div class="custom-control custom-radio">
      <%= f.radio_button :role, :stylist, id: :genre2, class: 'custom-control-input' %>
      <label for="genre2" class="custom-control-label">スタイリスト</label>
    </div>
  </div>

  <div class="form-group col-sm-6 col-md-4">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group col-sm-6 col-md-4">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(半角英数字<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group col-sm-6 col-md-4">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group col-sm-6 col-md-4">
    <%= f.submit "ユーザー登録", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

<%= render "users/shared/links" %>